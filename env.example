# Environment Variables for Colorado CareAssist Route Tracker

# Google Sheets Service Account Credentials (JSON format)
# Get this from Google Cloud Console -> Service Accounts -> Create Key
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"your-service-account@your-project.iam.gserviceaccount.com","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40your-project.iam.gserviceaccount.com"}

# Google OAuth Credentials (for user authentication)
# Get these from Google Cloud Console -> APIs & Services -> Credentials -> OAuth 2.0 Client IDs
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback

# Allowed domains for authentication (comma-separated)
ALLOWED_DOMAINS=coloradocareassist.com,yourcompany.com

# Google Sheet ID (already set to the correct sheet)
SHEET_ID=1rKBP_5eLgvIVprVEzOYRnyL9J3FMf9H-6SLjIvIYFgg

# App Secret Key (for session management) - Generate a secure random key
APP_SECRET_KEY=your-secret-key-here

# Mailchimp Configuration
# Get these from Mailchimp -> Account -> Extras -> API Keys
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
MAILCHIMP_SERVER_PREFIX=us1
MAILCHIMP_LIST_ID=your_mailchimp_list_id_here

# Gmail API (domain-wide delegation) for email sent counts
GMAIL_SERVICE_ACCOUNT_EMAIL=your-service-account@your-domain.iam.gserviceaccount.com
GMAIL_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project","private_key_id":"...","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n","client_email":"your-service-account@your-domain.iam.gserviceaccount.com","client_id":"...","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/your-service-account@your-domain.iam.gserviceaccount.com"}
# Comma-separated list of user inboxes to include in the KPI
GMAIL_USER_EMAILS=maryssa@coloradocareassist.com,jacob@coloradocareassist.com
# Legacy single-user fallback (used when GMAIL_USER_EMAILS is unset)
GMAIL_USER_EMAIL=maryssa@coloradocareassist.com

# Optional: Enable debug mode
DEBUG=False
